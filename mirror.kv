
AddLocationForm:
<AddLocationForm>:
    orientation: 'vertical'
    FloatLayout:
        padding: dp(260), dp(150)
        Button:

            text: 'Enter'
            size_hint: 0.8, 0.1
            pos_hint: {"x":0.1, "y":0}
            on_press: root.send_data(reminder.text)

        TextInput:
            id: reminder
            hint_text: 'Enter your reminder for user'
            size_hint: 0.8, 0.5
            pos_hint: {"x":0.1, "y":0.1}

        Spinner:
            id: spinner_1
            size_hint: 0.8, 0.1
            pos_hint: {"x":0.1, "y":0.85}
            text: 'User'
            values: ('S2pac', 'Vova', 'Anton')
            on_text: root.set_user(spinner_1.text)

        TextInput:
            id: ip
            hint_text: 'IP address'
            multiline: False
            size_hint: 0.5, 0.1
            pos_hint: {"x":0.1, "y":0.65}

        Button:
            text: 'Enter'
            size_hint: 0.3, 0.1
            pos_hint: {"x":0.6, "y":0.65}
            on_press: root.set_ip(ip.text)